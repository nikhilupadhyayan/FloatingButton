<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <TextView 
    	android:text="Daily Meal Logger" 
    	android:id="@+id/title" 
    	android:textSize="10pt"
    	android:layout_width="wrap_content" 
    	android:paddingBottom="10pt"
    	android:layout_height="wrap_content"
    	android:layout_centerHorizontal="true"/>
    <TextView
    	android:text=""
    	android:id="@+id/date_display_logger"
    	android:textSize="9pt"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/title"
    	android:layout_marginBottom="12pt"
    	android:layout_centerHorizontal="true"/>
    <TextView
    	android:text="List of meals for the day here"
    	android:id="@+id/meal_list"
    	android:textSize="10pt"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginBottom="20pt"
    	android:layout_below="@id/date_display_logger"
    	android:layout_centerHorizontal="true"/>
    <Button
    	android:text="Add Meal"
    	android:id="@+id/button_add_meal"
    	android:textSize="8pt"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerHorizontal="true"
    	android:layout_marginBottom="20pt"
    	android:textColor="#0000aa"
    	android:layout_below="@id/meal_list"/>
    <TextView
    	android:text="Total Calories Eaten"
    	android:id="@+id/total_calories_logger"
    	android:textSize="8pt"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="4pt"
    	android:layout_below="@id/button_add_meal"/>
    <TextView
    	android:text="0"
    	android:id="@+id/total_calories_logger_number"
    	android:textSize="10pt"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginRight="4pt"
    	android:layout_alignParentRight="true"
    	android:textColor="#aa0000"
    	android:layout_below="@id/button_add_meal"/>
    <Button 
    	android:text="Back" 
    	android:id="@+id/button_back_logger" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_alignParentBottom="true" 
    	android:layout_centerHorizontal="true"/>
</RelativeLayout>
